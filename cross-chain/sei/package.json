{
  "name": "@threshold-network/tbtc-v2-sei",
  "version": "1.0.0",
  "description": "tBTC v2 contracts and deployment scripts for Sei Network",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean && rm -rf cache/ export/ external/npm typechain/ export.json",
    "deploy": "hardhat deploy --export export.json",
    "format": "npm run lint",
    "format:fix": "npm run lint:fix",
    "lint": "npm run lint:eslint && npm run lint:sol && npm run lint:config",
    "lint:fix": "npm run lint:fix:eslint && npm run lint:fix:sol && npm run lint:config:fix",
    "lint:eslint": "eslint .",
    "lint:fix:eslint": "eslint . --fix",
    "lint:sol": "solhint 'contracts/**/*.sol' && prettier --check '**/*.sol'",
    "lint:fix:sol": "solhint 'contracts/**/*.sol' --fix && prettier --write '**/*.sol'",
    "lint:config": "prettier --check '**/*.@(json|yaml)'",
    "lint:config:fix": "prettier --write '**/*.@(json|yaml)'",
    "prepack": "tsc -p tsconfig.export.json && hardhat export-artifacts export/artifacts",
    "export-artifacts:testnet": "yarn hardhat export-deployment-artifacts --network seiTestnet",
    "export-artifacts:mainnet": "yarn hardhat export-deployment-artifacts --network seiMainnet",
    "prepublishOnly": "npm run export-artifacts:$npm_config_network",
    "setup-key": "ts-node scripts/secure-key-manager.ts --encrypt",
    "test-key": "ts-node scripts/secure-key-manager.ts --decrypt",
    "remove-key": "ts-node scripts/secure-key-manager.ts --remove",
    "deploy:encrypted": "hardhat run scripts/deploy-l2tbtc-encrypted.ts --network sei_atlantic_2",
    "verify": "hardhat verify",
    "verify:sei": "hardhat verify --network sei_atlantic_2",
    "test": "hardhat test"
  },
  "dependencies": {
    "@keep-network/tbtc-v2": "1.7.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.1"
  },
  "devDependencies": {
    "@keep-network/hardhat-helpers": "^0.6.0-pre.20",
    "@nomicfoundation/hardhat-verify": "^1.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "@thesis-co/eslint-config": "github:thesis/eslint-config",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.1",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.17",
    "@types/inquirer": "^8.2.5",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.11.18",
    "chai": "4.3.4",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.0.3",
    "eslint": "^7.32.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "^5.5.3",
    "express": "^4.18.2",
    "hardhat": "^2.10.0",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-deploy": "^0.11.11",
    "hardhat-gas-reporter": "^1.0.8",
    "inquirer": "^8.2.5",
    "prettier": "^2.5.1",
    "prettier-plugin-sh": "^0.8.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "3.3.6",
    "solhint-config-keep": "github:keep-network/solhint-config-keep",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "resolutions": {
    "secp256k1": "3.8.0",
    "@noble/hashes": "1.0.0",
    "@nomicfoundation/ethereumjs-util": "8.0.6",
    "cbor": "8.1.0",
    "@ethereumjs/util": "8.1.0",
    "@noble/curves": "1.5.0",
    "antlr4": "4.10.1",
    "@openzeppelin/upgrades-core": "1.20.0",
    "@aws-sdk/types": "3.1.0",
    "@typescript-eslint/parser": "5.62.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "hardhat": "2.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/threshold-network/tbtc-v2.git",
    "directory": "cross-chain/sei"
  },
  "author": "Threshold Network",
  "license": "GPL-3.0-only"
}
